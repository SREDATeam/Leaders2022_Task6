{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "types": [
      "react"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true,
    "baseUrl": "./src",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src"
  ]
}